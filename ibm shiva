document.addEventListener('DOMContentLoaded', () => {
    // 1. Quick View Button Interaction
    const quickViewButton = document.getElementById('quickViewBtn');

    if (quickViewButton) {
        quickViewButton.addEventListener('click', () => {
            alert('Quick View feature coming soon!\nProduct: Premium Wireless Headphones');
        });
    }

    // 2. Add to Cart Button Interaction (a more useful example)
    const cartButtons = document.querySelectorAll('.add-to-cart-btn');

    cartButtons.forEach(button => {
        button.addEventListener('click', (event) => {
            const productId = event.target.getAttribute('data-product-id');
            alert(`Product ID ${productId} has been added to the shopping cart! (Simulated)`);
            
            // In a real application, you would send an AJAX request here
            // to update the server and the shopping cart icon count.
        });
    });
});
